<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>create your post</title>
    <link rel="stylesheet" href="/styles/create.css">
</head>

<body>
    <div class="create">
        <h1>Write your Blog</h1>
        <form action="/submit" method="POST">
            <label for="title">Title:</label>
            <input type="text" id="title" name="title">
            <p id="titleCharactersLeft">35 Characters </p>
            <label for="content">Content:</label>
            <textarea id="content" name="content" class="text" placeholder="Start Writing" required></textarea>
            <input type="submit" value="Submit">
        </form>
    </div>
    <script>
        const titleInput = document.getElementById("title");
        const maxCharacters = 35;;
        titleInput.addEventListener("input", function () {
            // const currentCharactersEntered=titleInput.value.length
            const remainingChars = maxCharacters - titleInput.value.length;
            document.getElementById("titleCharactersLeft").textContent = remainingChars + " Characters Remaining";
        });
    </script>
</body>

</html>